---
import { NProgressProvider, Header, Footer } from '@/components'

import '@/styles/base.css'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.ico"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <meta
      name="title"
      content="Bruce Song's Blog"
    />
    <meta
      name="description"
      content="Bruce Song's personal blog."
    />
    <meta
      name="author"
      content="Bruce Song"
    />
    <title>{title}</title>
  </head>
  <body>
    <NProgressProvider client:only>
      <main class="relative min-h-full px-4 py-20 font-sans">
        <Header client:only />
        <slot />
        <Footer />
      </main>
    </NProgressProvider>
  </body>
</html>
