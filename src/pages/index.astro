import VueIcon from '~icons/logos/vue'
import ExpressjsIcon from '~icons/skill-icons/expressjs-light'
import NuxtjsIcon from '~icons/vscode-icons/file-type-nuxt'

const { author } = SITE_META

const TITLE_TEXT = 'Home'
const CONTENT_TITLE_TEXT = 'Profile'

/** eslint-disable quotes */
const profile = [
  `üëã Hi, I'm ${author}, a Web Developer and Open-Source enthusiast.`,
  "üìñ I'm interested in reading different books and making something amazing.",
  "üå± I'm currently focusing on React, Vue, TypeScript, Nest.js and React Native.",
  "üíûÔ∏è I'm looking to collaborate on any Open-Source project.",
  'üöÄ I recently built an admin system named Dolphin Admin based on Vue 3, TypeScript, Naive UI and TailwindCSS.',
  "üåê I'm also good at building Node.js CLI tools and enterprise website with SSR/SSG framework such as Gatsby, Next.js and Nuxt.js",
  'üçÄ If you are interested in making open source projects together, please contact me with my WeChat Recall4056.',
  'üì´ You can contact me with my email recall4056@gmail.com.',
