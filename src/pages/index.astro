---
import { SITE_META } from '@/app.config'
import { ContentTitle, Motto } from '@/components'
import { BaseLayout } from '@/layouts'
import TailwindCSSIcon from '~icons/devicon/tailwindcss'
import TypeScriptIcon from '~icons/devicon/typescript'
import AstroIcon from '~icons/logos/astro-icon'
import DocusaurusIcon from '~icons/logos/docusaurus'
import GatsbyIcon from '~icons/logos/gatsby'
import JavaScriptIcon from '~icons/logos/javascript'
import NestjsIcon from '~icons/logos/nestjs'
import NextjsIcon from '~icons/logos/nextjs-icon'
import NodejsIcon from '~icons/logos/nodejs-icon'
import PostgresqlIcon from '~icons/logos/postgresql'
